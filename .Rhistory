require(knitr)
require(rCharts)
library(reshape)
# Top-10 Movies in the MovieLens 1M Dataset
joined.ch <- read.csv("C:/Users/Vladislav/Desktop/R_code/MovieTitleIntuition/joined.csv", header = TRUE, sep = ",")
joined.ch$movieID <- as.integer(joined.ch$movieID)
joined.ch$movieName <- as.character(joined.ch$movieName)
top10 <- joined.ch[order(-joined.ch$rating),][1:10, ]
joined.md <- melt(top10, id.vars = c("movieName", "movieID", "genre"))
p2 <- nPlot(value ~ movieName, group = 'genre',
data = joined.md,
type = 'multiBarHorizontalChart'
)
p2$chart(showControls = F)
p2$chart(margin = list(left=150))
p2$set(width = 400, height = 300)
p2$params(title = "Top-10 Movies in the MovieLens 1M Dataset")
# p2$print('chart1')
p2
